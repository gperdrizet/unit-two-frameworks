// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Agentic Frameworks notebooks",
	"image": "mcr.microsoft.com/devcontainers/python:0-3.11",
	"onCreateCommand": "sudo apt update && sudo apt upgrade -y && sudo apt install -y chromium && pip3 install --upgrade pip && pip3 install --user -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {"jupyter.kernels.excludePythonEnvironments": ["/usr/bin/python3"]},
		"extensions": [
		  "-dbaeumer.vscode-eslint",
		  "ms-python.python",
		  "ms-toolsai.jupyter",
		  "streetsidesoftware.code-spell-checker"
		]
	  }
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "",

	// Use 'postAttachCommand' to run commands after the container is started.
	//"postAttachCommand": ""
}